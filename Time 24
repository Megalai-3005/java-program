import java.io.*;
import java.util.*;
import java.math.*;

public class Time {

    public static void main(String[] args) {
      Scanner sc=new Scanner(System.in);
        System.out.println("");
        int hrs=sc.nextInt();
        System.out.println("");
        int mins=sc.nextInt();
        System.out.println("");
        int secs=sc.nextInt();
        mins+=secs/60;
        secs=secs%60;
        hrs+=mins/60;
        mins=mins%60;
        System.out.println("total number of hrs:"+hrs+"total number of mintes:"+mins+"total number of secs:"+secs);
        
        
    }
}
